@page
@model OperationsModel
@{
    ViewData["Title"] = "Choose Operation";
}

<div style="display:flex; flex-direction:column; align-items:center; justify-content:center; height:100vh; background:linear-gradient(135deg, #f6d365, #fda085);">
    <h1 style="font-size:2.5rem; color:white; font-weight:bold; text-shadow:2px 2px 6px rgba(0,0,0,0.3);">
        Choose a Math Operation
    </h1>

    <div style="display:grid; grid-template-columns:repeat(2, 150px); gap:20px; margin-top:40px;">
        <a asp-page="/Difficulty" asp-route-operation="add" class="operation-btn">➕ Add</a>
        <a asp-page="/Difficulty" asp-route-operation="subtract" class="operation-btn">➖ Subtract</a>
        <a asp-page="/Difficulty" asp-route-operation="multiply" class="operation-btn">✖ Multiply</a>
        <a asp-page="/Difficulty" asp-route-operation="divide" class="operation-btn">➗ Divide</a>
    </div>

    <a asp-page="/Index" style="margin-top:40px; color:white; text-decoration:underline;">⬅ Back to Home</a>
</div>

<style>
    .operation-btn {
        background-color: #fff;
        color: #333;
        font-weight: bold;
        text-align: center;
        padding: 20px;
        border-radius: 20px;
        text-decoration: none;
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .operation-btn:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 12px rgba(0,0,0,0.3);
    }
</style>
