@page
@model OperationsModel
@{
    ViewData["Title"] = "Choose Operation";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #0f3460 0%, #16213e 25%, #1a3a52 50%, #0d1f2d 75%, #050a0f 100%);
        background-attachment: fixed;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        position: relative;
    }



    .operations-container {
        background: white;
        border-radius: 30px;
        padding: 50px 60px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        text-align: center;
        max-width: 600px;
        position: relative;
        z-index: 1;
        animation: slideIn 0.6s ease-out;
        border: 1px solid rgba(255, 255, 255, 0.5);
    }

    @@keyframes slideIn {
        from {
            transform: translateY(-50px);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    .page-title {
        color: #64b5f6;
        font-size: 36px;
        margin-bottom: 15px;
        font-weight: bold;
    }

    .subtitle {
        color: #666;
        font-size: 16px;
        margin-bottom: 40px;
    }

    .operations-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        margin-bottom: 30px;
    }

    .operation-btn {
        background: linear-gradient(135deg, rgba(100, 181, 246, 0.15) 0%, rgba(25, 118, 210, 0.1) 100%);
        border: 3px solid #1976d2;
        color: #64b5f6;
        font-weight: bold;
        text-align: center;
        padding: 30px 20px;
        border-radius: 20px;
        text-decoration: none;
        box-shadow: 0 4px 15px rgba(100, 181, 246, 0.2);
        transition: all 0.3s ease;
        font-size: 18px;
        position: relative;
        overflow: hidden;
    }

    .operation-btn:before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        border-radius: 50%;
        background: linear-gradient(135deg, #1976d2 0%, #1565c0 100%);
        transform: translate(-50%, -50%);
        transition: width 0.5s, height 0.5s;
        z-index: 0;
    }

    .operation-btn:hover:before {
        width: 400px;
        height: 400px;
    }

    .operation-btn:hover {
        transform: translateY(-8px);
        box-shadow: 0 8px 25px rgba(100, 181, 246, 0.5);
        border-color: #64b5f6;
        color: white;
    }

    .operation-btn span {
        position: relative;
        z-index: 1;
        display: block;
    }

    .operation-icon {
        font-size: 40px;
        display: block;
        margin-bottom: 10px;
    }

    .operation-text {
        font-size: 18px;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: #64b5f6;
        text-decoration: none;
        font-weight: 600;
        padding: 12px 24px;
        border-radius: 25px;
        background: rgba(100, 181, 246, 0.15);
        transition: all 0.3s ease;
        margin-top: 20px;
        border: 1px solid rgba(100, 181, 246, 0.3);
    }

    .back-link:hover {
        background: linear-gradient(135deg, #1976d2 0%, #1565c0 100%);
        color: white;
        transform: translateX(-5px);
    }

    /* Specific colors for each operation */
    .operation-btn:nth-child(1):hover {
        border-color: #10b981;
    }

    .operation-btn:nth-child(1):hover:before {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    }

    .operation-btn:nth-child(2):hover {
        border-color: #f59e0b;
    }

    .operation-btn:nth-child(2):hover:before {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
    }

    .operation-btn:nth-child(3):hover {
        border-color: #ef4444;
    }

    .operation-btn:nth-child(3):hover:before {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    }

    .operation-btn:nth-child(4):hover {
        border-color: #8b5cf6;
    }

    .operation-btn:nth-child(4):hover:before {
        background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
    }

    @@media (max-width: 600px) {
        .operations-container {
            padding: 40px 30px;
            margin: 20px;
        }

        .page-title {
            font-size: 28px;
        }

        .operations-grid {
            grid-template-columns: 1fr;
            gap: 15px;
        }

        .operation-btn {
            padding: 25px 20px;
        }
    }
</style>

<div class="operations-container">
    <h1 class="page-title">Choose Your Operation</h1>
    <p class="subtitle">Pick the math challenge you want to master!</p>

    <div class="operations-grid">
        <a asp-page="/Difficulty" asp-route-operation="add" asp-route-FastMode="@Model.FastMode" class="operation-btn" data-transition="true">
            <span>
                <span class="operation-icon">➕</span>
                <span class="operation-text">Addition</span>
            </span>
        </a>
        <a asp-page="/Difficulty" asp-route-operation="subtract" asp-route-FastMode="@Model.FastMode" class="operation-btn" data-transition="true">
            <span>
                <span class="operation-icon">➖</span>
                <span class="operation-text">Subtraction</span>
            </span>
        </a>
        <a asp-page="/Difficulty" asp-route-operation="multiply" asp-route-FastMode="@Model.FastMode" class="operation-btn" data-transition="true">
            <span>
                <span class="operation-icon">✖️</span>
                <span class="operation-text">Multiplication</span>
            </span>
        </a>
        <a asp-page="/Difficulty" asp-route-operation="divide" asp-route-FastMode="@Model.FastMode" class="operation-btn" data-transition="true">
            <span>
                <span class="operation-icon">➗</span>
                <span class="operation-text">Division</span>
            </span>
        </a>
    </div>

    <a asp-page="/Index" class="back-link">
        <span>⬅</span>
        <span>Back to Home</span>
    </a>
</div>