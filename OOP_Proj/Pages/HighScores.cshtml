@page
@model OOP_Proj.Pages.HighScoresModel
@{
    ViewData["Title"] = "High Scores";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #0f3460 0%, #16213e 25%, #1a3a52 50%, #0d1f2d 75%, #050a0f 100%);
        background-attachment: fixed;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        padding: 40px 20px;
    }

    .leaderboard-container {
        background: white;
        border-radius: 25px;
        padding: 40px 50px;
        box-shadow: 0 15px 45px rgba(0, 0, 0, 0.35);
        text-align: center;
        width: 100%;
        max-width: 900px;
        animation: fadeIn 0.5s ease-out;
        border: 1px solid rgba(255,255,255,0.4);
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    h2 {
        color: #64b5f6;
        font-size: 38px;
        margin-bottom: 20px;
        font-weight: 800;
        letter-spacing: 1px;
    }

    .subtitle {
        color: #555;
        font-size: 16px;
        margin-bottom: 30px;
    }

    table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 12px;
        margin-top: 10px;
    }

    thead th {
        background: #1976d2;
        color: white;
        padding: 14px;
        border-radius: 10px;
        font-size: 15px;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

    tbody tr {
        transition: 0.25s ease;
    }

    tbody td {
        background: rgba(100, 181, 246, 0.12);
        padding: 14px 12px;
        border-radius: 10px;
        font-size: 15px;
        font-weight: 500;
        color: #222;
    }

    tbody tr:hover td {
        background: rgba(100, 181, 246, 0.22);
        transform: scale(1.01);
    }

    .back-button {
        display: inline-block;
        margin-top: 35px;
        background: linear-gradient(135deg, #1976d2 0%, #1565c0 100%);
        color: white;
        padding: 14px 40px;
        border-radius: 40px;
        text-decoration: none;
        font-size: 18px;
        font-weight: bold;
        box-shadow: 0 8px 25px rgba(25, 118, 210, 0.45);
        transition: 0.3s ease;
        border: 1px solid rgba(255,255,255,0.3);
    }

    .back-button:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 30px rgba(100, 181, 246, 0.7);
    }
</style>

<div class="leaderboard-container">
    <h2>🏆 High Scores</h2>
    <p class="subtitle">View the top players and their latest achievements.</p>

    <table>
        <thead>
            <tr>
                <th>Username</th>
                <th>Operation</th>
                <th>Difficulty</th>
                <th>Score</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var score in Model.Scores)
            {
                <tr>
                    <td>@score.Username</td>
                    <td>@score.Operation</td>
                    <td>@score.Difficulty</td>
                    <td>@score.Score</td>
                    <td>@score.Date.ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-page="/Index" class="back-button">⬅ Back to Main</a>
</div>
