@page
@model OOP_Proj.Pages.HighScoresModel
@{
    ViewData["Title"] = "High Scores";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .leaderboard-container {
        background: white;
        border-radius: 25px;
        padding: 40px 50px;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.25);
        text-align: center;
        max-width: 800px;
        width: 100%;
        animation: fadeIn 0.6s ease-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    h2 {
        color: #667eea;
        font-size: 36px;
        margin-bottom: 25px;
        font-weight: bold;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
        border-radius: 12px;
        overflow: hidden;
    }

    th, td {
        padding: 14px;
        text-align: center;
    }

    th {
        background: #667eea;
        color: white;
        font-size: 16px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    tr:nth-child(even) {
        background: #f8f9ff;
    }

    tr:hover {
        background: #eef2ff;
        transition: background 0.3s ease;
    }

    td {
        font-size: 15px;
        color: #333;
    }

    .fast-mode-icon {
        color: #ff4757;
        margin-left: 6px;
        font-weight: bold;
    }

    .medal {
        font-size: 18px;
        margin-left: 6px;
    }

    .back-button {
        display: inline-block;
        margin-top: 25px;
        padding: 12px 24px;
        background: #667eea;
        color: white;
        text-decoration: none;
        border-radius: 25px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .back-button:hover {
            background: #764ba2;
            transform: translateY(-3px);
        }
</style>

<div class="leaderboard-container">
    <h2>🏆 High Scores</h2>

    <table>
        <thead>
            <tr>
                <th>Rank</th>
                <th>Username</th>
                <th>Operation</th>
                <th>Difficulty</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
            @{
                var rank = 1;
            }
            @foreach (var score in Model.Scores.OrderByDescending(s => s.Score))
            {
                <tr>
                    <td>
                        @rank
                        @if (rank == 1)
                        {
                            <span class="medal">🥇</span>
                        }
                        else if (rank == 2)
                        {
                            <span class="medal">🥈</span>
                        }
                        else if (rank == 3)
                        {
                            <span class="medal">🥉</span>
                        }
                    </td>
                    <td>@score.Username</td>
                    <td>@score.Operation</td>
                    <td>
                        @score.Difficulty
                        @if (score.FastMode)
                        {
                            <span class="fast-mode-icon">⚡</span>
                        }
                    </td>
                    <td>@score.Score</td>
                </tr>
                rank++;
            }
        </tbody>
    </table>

    <a asp-page="/Index" class="back-button">⬅ Back to Main</a>
</div>
