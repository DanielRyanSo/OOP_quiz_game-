@page
@model OOP_Proj.Pages.HighScoresModel
@{
    ViewData["Title"] = "High Scores";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #0f3460 0%, #16213e 25%, #1a3a52 50%, #0d1f2d 75%, #050a0f 100%);
        background-attachment: fixed;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        position: relative;
    }

    @@keyframes slideIn {
        from {
            transform: translateY(-50px);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    .leaderboard-container {
        background: white;
        border-radius: 30px;
        padding: 50px 60px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        text-align: center;
        max-width: 700px;
        width: 100%;
        position: relative;
        z-index: 1;
        animation: slideIn 0.6s ease-out;
        border: 1px solid rgba(255, 255, 255, 0.5);
    }

    .page-title {
        color: #64b5f6;
        font-size: 36px;
        margin-bottom: 10px;
        font-weight: bold;
    }

    .leaderboard-container .subtitle {
        color: #666;
        font-size: 16px;
        margin-bottom: 20px;
    }

    .leaderboard-container table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 10px;
        margin-top: 10px;
        border-radius: 12px;
        overflow: hidden;
        text-align: center;
        background: transparent;
    }

    .leaderboard-container thead th {
        font-size: 14px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        background: #1976d2;
        color: #fff;
        padding: 12px;
    }

    .leaderboard-container tbody td {
        padding: 12px;
        font-size: 15px;
        font-weight: bold;
        color: #222;
        background: rgba(100, 181, 246, 0.06);
        border-bottom: 1px solid rgba(0,0,0,0.06);
    }

    .leaderboard-container tbody tr:hover {
        transform: scale(1.02);
        background: rgba(100, 181, 246, 0.12);
    }

    .rank-cell {
        text-align: center;
    }

    .medal-icon, .rank-number {
        display: inline-block;
        width: 32px;
        text-align: center;
        font-size: 18px;
        font-weight: 700;
    }

    /* Top 3 row styles */
    tr.gold {
        background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
        color: #000;
        border: 2px solid #FFD700;
    }

    tr.silver {
        background: linear-gradient(135deg, #C0C0C0 0%, #808080 100%);
        color: #000;
        border: 2px solid #C0C0C0;
    }

    tr.bronze {
        background: linear-gradient(135deg, #CD7F32 0%, #8B4513 100%);
        color: #fff;
        border: 2px solid #CD7F32;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: #64b5f6;
        text-decoration: none;
        font-weight: 600;
        padding: 12px 24px;
        border-radius: 25px;
        background: rgba(100, 181, 246, 0.15);
        transition: all 0.3s ease;
        margin-top: 20px;
        border: 1px solid rgba(100, 181, 246, 0.3);
    }

    .back-link:hover {
        background: linear-gradient(135deg, #1976d2 0%, #1565c0 100%);
        color: white;
        transform: translateX(-5px);
    }

    .fast-mode-icon {
        margin-left: 6px;
        color: #ffb86b;
        font-weight: bold;
    }

    @@media (max-width: 768px) {
        .leaderboard-container {
            padding: 30px 24px;
            margin: 20px;
        }

        .page-title {
            font-size: 28px;
        }

        .leaderboard-container thead th, .leaderboard-container tbody td {
            font-size: 14px;
            padding: 10px;
        }
    }
</style>

<div class="leaderboard-container">
    <h1 class="page-title">🏆 High Scores</h1>
    <p class="subtitle">View the top players and their latest achievements.</p>

    <table>
        <thead>
            <tr>
                <th>Rank</th>
                <th>Username</th>
                <th>Operation</th>
                <th>Difficulty</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
            @{
                var rank = 1;
            }
            @foreach (var score in Model.Scores.OrderByDescending(s => s.Score))
            {
                string rowClass = "";
                if (rank == 1) rowClass = "gold";
                else if (rank == 2) rowClass = "silver";
                else if (rank == 3) rowClass = "bronze";

                <tr class="@rowClass">
                    <td class="rank-cell">
                        @if (rank == 1)
                        {
                            <span class="medal-icon">🥇</span>
                        }
                        else if (rank == 2)
                        {
                            <span class="medal-icon">🥈</span>
                        }
                        else if (rank == 3)
                        {
                            <span class="medal-icon">🥉</span>
                        }
                        else
                        {
                            <span class="rank-number">@rank</span>
                        }
                    </td>
                    <td>@score.Username</td>
                    <td style="text-transform: capitalize;">@score.Operation</td>
                    <td>
                        @if (score.FastMode)
                        {
                            <span class="fast-mode">
                                ⚡ @score.Difficulty ⚡
                            </span>
                        }
                        else
                        {
                            <span class="difficulty">@score.Difficulty</span>
                        }
                    </td>
                    <td>@score.Score</td>
                </tr>
                rank++;
            }
        </tbody>
    </table>
    <a asp-page="/Index" class="back-link">⬅ Back to Home</a>
</div>