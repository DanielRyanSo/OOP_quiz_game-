@page
@model OOP_Proj.Pages.AuthModel
@{
    ViewData["Title"] = "Login/Register";
}

<div class="book-container">
    <div class="book" id="book">
        <!-- Left page: Login -->
        <div class="page page-left">
            <h2>Login</h2>
            <form method="post" asp-page-handler="Login">
                <input asp-for="LoginUsername" placeholder="Username" required />
                <input asp-for="LoginPassword" type="password" placeholder="Password" required />
                <button type="submit">Login</button>
            </form>
            <p class="switch-text">Don't have an account? 
                <span class="switch-btn" onclick="flipToRegister()">Register →</span>
            </p>
            <p class="message">@Model.LoginMessage</p>
        </div>

        <!-- Right page: Register -->
        <div class="page page-right">
            <h2>Register</h2>
            <form method="post" asp-page-handler="Register">
                <input asp-for="RegisterUsername" placeholder="Username" required />
                <input asp-for="RegisterPassword" type="password" placeholder="Password" required />
                <button type="submit">Register</button>
            </form>
            <p class="switch-text">Already have an account? 
                <span class="switch-btn" onclick="flipToLogin()">← Login</span>
            </p>
            <p class="message">@Model.RegisterMessage</p>
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg,#667eea,#764ba2);
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0;
    }

    .book-container {
        perspective: 1500px;
    }

    .book {
        width: 600px;
        height: 400px;
        position: relative;
        transform-style: preserve-3d;
        transition: transform 0.8s ease-in-out;
    }

    .page {
        position: absolute;
        width: 300px;
        height: 100%;
        top: 0;
        left: 0;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        padding: 40px;
        backface-visibility: hidden;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .page-right {
        left: 300px;
        transform: rotateY(180deg);
    }

    h2 {
        color: #667eea;
        margin-bottom: 20px;
    }

    input {
        width: 80%;
        padding: 12px 15px;
        margin: 8px 0;
        border-radius: 8px;
        border: 1px solid #ccc;
        font-size: 16px;
    }

    button {
        width: 50%;
        padding: 12px;
        margin-top: 15px;
        background: #667eea;
        color: white;
        border: none;
        border-radius: 25px;
        font-size: 16px;
        cursor: pointer;
        transition: 0.3s;
    }

    button:hover {
        background: #764ba2;
    }

    .switch-text {
        margin-top: 15px;
        font-size: 14px;
        color: #333;
    }

    .switch-btn {
        color: #667eea;
        cursor: pointer;
        font-weight: bold;
    }

    .message {
        color: red;
        font-size: 14px;
        margin-top: 10px;
    }

    /* Flip animation */
    .book.flipped {
        transform: rotateY(-180deg);
    }
</style>

<script>
    const book = document.getElementById('book');

    function flipToRegister() {
        book.classList.add('flipped');
    }

    function flipToLogin() {
        book.classList.remove('flipped');
    }
</script>
