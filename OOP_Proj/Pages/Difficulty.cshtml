@page "{operation}"
@model DifficultyModel
@{
    ViewData["Title"] = "Choose Difficulty";

    // Normalize operation and prepare display values
    var opRaw = Model.Operation ?? string.Empty;
    var op = opRaw.ToLowerInvariant();
    string opIcon;
    string opLabel;
    string opClass;
    string opDescription;

    switch (op)
    {
        case "add":
            opIcon = "‚ûï";
            opLabel = "Addition";
            opClass = "op-add";
            opDescription = "Combine numbers to get a larger value.";
            break;
        case "subtract":
            opIcon = "‚ûñ";
            opLabel = "Subtraction";
            opClass = "op-subtract";
            opDescription = "Take one number away from another.";
            break;
        case "multiply":
            opIcon = "‚úñÔ∏è";
            opLabel = "Multiplication";
            opClass = "op-multiply";
            opDescription = "Repeated addition ‚Äî multiply numbers together.";
            break;
        case "divide":
            opIcon = "‚ûó";
            opLabel = "Division";
            opClass = "op-divide";
            opDescription = "Split a number into equal parts.";
            break;
        default:
            opIcon = "‚ùì";
            opLabel = string.IsNullOrWhiteSpace(opRaw) ? "Operation" : System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(opRaw);
            opClass = "op-unknown";
            opDescription = "Select an operation to begin.";
            break;
    }
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #0f3460 0%, #16213e 25%, #1a3a52 50%, #0d1f2d 75%, #050a0f 100%);
        background-attachment: fixed;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        position: relative;
    }

    .difficulty-container {
        background: white;
        border-radius: 30px;
        padding: 50px 60px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        text-align: center;
        max-width: 700px;
        position: relative;
        z-index: 1;
        animation: slideIn 0.6s ease-out;
        border: 1px solid rgba(255, 255, 255, 0.5);
    }

    @@keyframes slideIn {
        from {
            transform: translateY(-50px);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    .page-title {
        color: #64b5f6;
        font-size: 36px;
        margin-bottom: 15px;
        font-weight: bold;
    }

    /* Operation display base */
    .operation-display {
        display: inline-flex;
        align-items: center;
        gap: 12px;
        color: white;
        padding: 12px 20px;
        border-radius: 18px;
        font-size: 18px;
        font-weight: 700;
        margin-bottom: 28px;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.25);
        align-items: center;
        min-width: 220px;
        justify-content: center;
    }

    .operation-icon {
        font-size: 26px;
        display: inline-flex;
        width: 44px;
        height: 44px;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        background: rgba(255,255,255,0.12);
        box-shadow: 0 3px 10px rgba(0,0,0,0.18);
        transform-origin: center;
        animation: floatIcon 3s ease-in-out infinite;
    }

    @@keyframes floatIcon {
        0% { transform: translateY(0); }
        50% { transform: translateY(-4px) rotate(-6deg); }
        100% { transform: translateY(0); }
    }

    .operation-text {
        font-size: 18px;
        letter-spacing: 0.4px;
    }

    .operation-sub {
        display: block;
        font-size: 12px;
        opacity: 0.95;
        margin-top: 3px;
        font-weight: 500;
        color: rgba(255,255,255,0.92);
        opacity: 0.9;
    }

    /* Per-operation color schemes (distinct from Easy/Medium/Hard button colors) */
    .op-add {
        /* cyan/teal ‚Äî distinct from green/orange/red */
        background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
    }
    .op-add .operation-icon { background: rgba(255,255,255,0.14); }

    .op-subtract {
        /* fuchsia/magenta ‚Äî distinct from green/orange/red */
        background: linear-gradient(135deg, #ec4899 0%, #be185d 100%);
    }
    .op-subtract .operation-icon { background: rgba(255,255,255,0.14); }

    .op-multiply {
        /* indigo ‚Äî distinct and visually separate from difficulty colors */
        background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
    }
    .op-multiply .operation-icon { background: rgba(255,255,255,0.12); }

    .op-divide {
        /* slate/gray-blue ‚Äî neutral and distinct from difficulty colors */
        background: linear-gradient(135deg, #475569 0%, #0f172a 100%);
    }
    .op-divide .operation-icon { background: rgba(255,255,255,0.10); }

    .op-unknown {
        background: linear-gradient(135deg, #6b7280 0%, #374151 100%);
    }
    .op-unknown .operation-icon { background: rgba(255,255,255,0.10); }

    /* Responsive tweak for operation display with subtitle */
    .operation-display .operation-details {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 2px;
    }

    /* small helper for screen readers */
    .visually-hidden {
        position: absolute !important;
        height: 1px; width: 1px;
        overflow: hidden;
        clip: rect(1px, 1px, 1px, 1px);
        white-space: nowrap;
    }

    .difficulty-grid {
        display: flex;
        gap: 20px;
        margin-bottom: 30px;
        flex-wrap: wrap;
        justify-content: center;
    }

    .diff-btn {
        flex: 1;
        min-width: 180px;
        padding: 30px 25px;
        border-radius: 20px;
        text-decoration: none;
        font-size: 18px;
        font-weight: bold;
        color: white;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.25);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        border: 3px solid transparent;
    }

    .diff-btn:before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.3);
        transform: translate(-50%, -50%);
        transition: width 0.5s, height 0.5s;
    }

    .diff-btn:hover:before {
        width: 400px;
        height: 400px;
    }

    .diff-btn:hover {
        transform: translateY(-8px) scale(1.05);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.35);
    }

    .diff-btn span {
        position: relative;
        z-index: 1;
        display: block;
    }

    .difficulty-icon {
        font-size: 40px;
        display: block;
        margin-bottom: 10px;
    }

    .difficulty-text {
        font-size: 20px;
        display: block;
    }

    .difficulty-desc {
        font-size: 13px;
        opacity: 0.9;
        margin-top: 5px;
    }

    .diff-easy {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    }

    .diff-easy:hover {
        border-color: #10b981;
    }

    .diff-medium {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
    }

    .diff-medium:hover {
        border-color: #f59e0b;
    }

    .diff-hard {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    }

    .diff-hard:hover {
        border-color: #ef4444;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: #64b5f6;
        text-decoration: none;
        font-weight: 600;
        padding: 12px 24px;
        border-radius: 25px;
        background: rgba(100, 181, 246, 0.15);
        transition: all 0.3s ease;
        margin-top: 20px;
        border: 1px solid rgba(100, 181, 246, 0.3);
    }

    .back-link:hover {
        background: linear-gradient(135deg, #1976d2 0%, #1565c0 100%);
        color: white;
        transform: translateX(-5px);
    }

    .subtitle {
        color: #666;
        font-size: 16px;
        margin-bottom: 30px;
    }

    @@media (max-width: 768px) {
        .difficulty-container {
            padding: 40px 30px;
            margin: 20px;
        }

        .page-title {
            font-size: 28px;
        }

        .difficulty-grid {
            flex-direction: column;
            gap: 15px;
        }

        .diff-btn {
            min-width: 100%;
        }

        .operation-display {
            min-width: auto;
            padding: 12px 16px;
            gap: 8px;
        }

        .operation-sub {
            display: none; /* hide subtitle on very small screens */
        }
    }
</style>

<div class="difficulty-container">
    <h1 class="page-title">Choose Your Challenge</h1>
    <p class="subtitle">How hard do you want to go?</p>

    <!-- Improved operation display: color-coded, animated icon, accessible labels & short description -->
    <div class="operation-display @opClass" role="status" aria-live="polite" aria-label="@($"{opLabel} selected")" title="@opLabel">
        <span class="operation-icon" aria-hidden="true">@opIcon</span>

        <div class="operation-details">
            <span class="operation-text">@opLabel</span>
            <span class="operation-sub">@opDescription</span>
        </div>

        <span class="visually-hidden">@($"{opLabel} selected. {opDescription}")</span>
    </div>

    <div class="difficulty-grid">
        <a asp-page="/Game" asp-route-operation="@Model.Operation" asp-route-difficulty="easy" asp-route-FastMode="@Model.FastMode" class="diff-btn diff-easy" data-transition="true">
