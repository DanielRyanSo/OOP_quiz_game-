                <span class="difficulty-icon">üòä</span>
                <span class="difficulty-text">Easy</span>
                <span class="difficulty-desc">Perfect for beginners</span>
            </span>
        </a>

        <a asp-page="/Game" asp-route-operation="@Model.Operation" asp-route-difficulty="medium" asp-route-FastMode="@Model.FastMode" class="diff-btn diff-medium" data-transition="true">
            <span>
                <span class="difficulty-icon">ü§î</span>
                <span class="difficulty-text">Medium</span>
                <span class="difficulty-desc">A good challenge</span>
            </span>
        </a>

        <a asp-page="/Game" asp-route-operation="@Model.Operation" asp-route-difficulty="hard" asp-route-FastMode="@Model.FastMode" class="diff-btn diff-hard" data-transition="true">
            <span>
                <span class="difficulty-icon">üî•</span>
                <span class="difficulty-text">Hard</span>
                <span class="difficulty-desc">For math masters</span>
            </span>
        </a>
    </div>

    <a asp-page="/Operations" class="back-link">
        <span>‚¨Ö</span>
        <span>Back to Operations</span>
    </a>
</div>