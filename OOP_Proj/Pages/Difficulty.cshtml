@page "{operation}"
@model DifficultyModel
@{
    ViewData["Title"] = "Choose Difficulty";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #0f3460 0%, #16213e 25%, #1a3a52 50%, #0d1f2d 75%, #050a0f 100%);
        background-attachment: fixed;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        position: relative;
    }



    .difficulty-container {
        background: white;
        border-radius: 30px;
        padding: 50px 60px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        text-align: center;
        max-width: 700px;
        position: relative;
        z-index: 1;
        animation: slideIn 0.6s ease-out;
        border: 1px solid rgba(255, 255, 255, 0.5);
    }

    @@keyframes slideIn {
        from {
            transform: translateY(-50px);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    .page-title {
        color: #64b5f6;
        font-size: 36px;
        margin-bottom: 15px;
        font-weight: bold;
    }

    .operation-display {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        background: linear-gradient(135deg, #1976d2 0%, #1565c0 100%);
        color: white;
        padding: 12px 30px;
        border-radius: 50px;
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 40px;
        box-shadow: 0 4px 15px rgba(100, 181, 246, 0.4);
    }

    .operation-icon {
        font-size: 24px;
    }

    .difficulty-grid {
        display: flex;
        gap: 20px;
        margin-bottom: 30px;
        flex-wrap: wrap;
        justify-content: center;
    }

    .diff-btn {
        flex: 1;
        min-width: 180px;
        padding: 30px 25px;
        border-radius: 20px;
        text-decoration: none;
        font-size: 18px;
        font-weight: bold;
        color: white;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.25);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        border: 3px solid transparent;
    }

    .diff-btn:before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.3);
        transform: translate(-50%, -50%);
        transition: width 0.5s, height 0.5s;
    }

    .diff-btn:hover:before {
        width: 400px;
        height: 400px;
    }

    .diff-btn:hover {
        transform: translateY(-8px) scale(1.05);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.35);
    }

    .diff-btn span {
        position: relative;
        z-index: 1;
        display: block;
    }

    .difficulty-icon {
        font-size: 40px;
        display: block;
        margin-bottom: 10px;
    }

    .difficulty-text {
        font-size: 20px;
        display: block;
    }

    .difficulty-desc {
        font-size: 13px;
        opacity: 0.9;
        margin-top: 5px;
    }

    /* Easy - Green */
    .diff-easy {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    }

    .diff-easy:hover {
        border-color: #10b981;
    }

    /* Medium - Orange */
    .diff-medium {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
    }

    .diff-medium:hover {
        border-color: #f59e0b;
    }

    /* Hard - Red */
    .diff-hard {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    }

    .diff-hard:hover {
        border-color: #ef4444;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: #64b5f6;
        text-decoration: none;
        font-weight: 600;
        padding: 12px 24px;
        border-radius: 25px;
        background: rgba(100, 181, 246, 0.15);
        transition: all 0.3s ease;
        margin-top: 20px;
        border: 1px solid rgba(100, 181, 246, 0.3);
    }

    .back-link:hover {
        background: linear-gradient(135deg, #1976d2 0%, #1565c0 100%);
        color: white;
        transform: translateX(-5px);
    }

    .subtitle {
        color: #666;
        font-size: 16px;
        margin-bottom: 30px;
    }

    @@media (max-width: 768px) {
        .difficulty-container {
            padding: 40px 30px;
            margin: 20px;
        }

        .page-title {
            font-size: 28px;
        }

        .difficulty-grid {
            flex-direction: column;
            gap: 15px;
        }

        .diff-btn {
            min-width: 100%;
        }
    }
</style>

<div class="difficulty-container">
    <h1 class="page-title">Choose Your Challenge</h1>
    <p class="subtitle">How hard do you want to go?</p>

    <div class="operation-display">
        <span class="operation-icon">
            @if (Model.Operation == "add") { <text>‚ûï</text> }
            else if (Model.Operation == "subtract") { <text>‚ûñ</text> }
            else if (Model.Operation == "multiply") { <text>‚úñÔ∏è</text> }
            else if (Model.Operation == "divide") { <text>‚ûó</text> }
        </span>
        <span style="text-transform: capitalize;">@Model.Operation</span>
    </div>

    <div class="difficulty-grid">
        <a asp-page="/Game" asp-route-operation="@Model.Operation" asp-route-difficulty="easy" asp-route-FastMode="@Model.FastMode" class="diff-btn diff-easy" data-transition="true">
            <span>
                <span class="difficulty-icon">üòä</span>
                <span class="difficulty-text">Easy</span>
                <span class="difficulty-desc">Perfect for beginners</span>
            </span>
        </a>

        <a asp-page="/Game" asp-route-operation="@Model.Operation" asp-route-difficulty="medium" asp-route-FastMode="@Model.FastMode" class="diff-btn diff-medium" data-transition="true">
            <span>
                <span class="difficulty-icon">ü§î</span>
                <span class="difficulty-text">Medium</span>
                <span class="difficulty-desc">A good challenge</span>
            </span>
        </a>

        <a asp-page="/Game" asp-route-operation="@Model.Operation" asp-route-difficulty="hard" asp-route-FastMode="@Model.FastMode" class="diff-btn diff-hard" data-transition="true">
            <span>
                <span class="difficulty-icon">üî•</span>
                <span class="difficulty-text">Hard</span>
                <span class="difficulty-desc">For math masters</span>
            </span>
        </a>
    </div>

    <a asp-page="/Operations" class="back-link">
        <span>‚¨Ö</span>
        <span>Back to Operations</span>
    </a>
</div>